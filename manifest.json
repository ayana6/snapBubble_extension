

{
  "manifest_version": 3,
  "name": "SnapBubble",
  "version": "2.2.0",
  "version_name": "2.2.0",
  "description": "Translate any speech bubble, anywhere - Pure client-side extension with OCR and AI translation",
  "icons": {
    "16": "SnapBubble-01.png",
    "32": "SnapBubble-01.png",
    "48": "SnapBubble-01.png",
    "128": "SnapBubble-01.png"
  },
  "action": {
    "default_title": "SnapBubble",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "SnapBubble-01.png",
      "32": "SnapBubble-01.png",
      "48": "SnapBubble-01.png",
      "128": "SnapBubble-01.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/utils.js",
        "lib/ocr.js",
        "lib/translate.js",
        "lib/overlay.js",
        "lib/ai_ocr.js",
        "lib/manual-select.js",
        "lib/segmentation.js",
        "lib/api-helper.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}